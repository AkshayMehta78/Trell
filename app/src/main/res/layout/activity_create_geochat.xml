<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_tool_bar"></include>
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/toolbar"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Daffodils'23"
        android:textSize="@dimen/text_size_xlarge"
        android:layout_below="@+id/map"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:padding="@dimen/padding_large"
        android:id="@+id/locationTextView"
        android:visibility="visible"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_below="@+id/locationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal"
        card_view:cardBackgroundColor="@color/window_background"
        card_view:cardElevation="2dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_margin="@dimen/margin_normal"
            >

            <TextView
                android:id="@+id/cameraTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/padding_normal"
                android:text="@string/camera"
                android:gravity="center"
                android:background="@color/primary"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/margin_normal"
                />

            <TextView
                android:id="@+id/allPhotosTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/padding_normal"
                android:text="@string/allphotos"
                android:gravity="center"
                android:background="@color/primary"
                android:textColor="@color/white"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <ImageView
        android:id="@+id/geoChatImageView"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:src="@drawable/travel_bg"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/margin_normal"
        android:layout_below="@+id/card_view"/>

</RelativeLayout>
</ScrollView>