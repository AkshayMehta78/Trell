<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/window_background</item>

    </style>

    <style name="floatingTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="colorControlNormal">@color/light_grey</item>
        <item name="colorControlActivated">@color/light_grey</item>
    </style>

    <!--
        Terms and Condition Text Style
    -->
    <style name="text_desc">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="heading">
        <item name="android:textColor">@color/carrot_red</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallRatingBar" parent="Base.Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_small</item>
    </style>

    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="bs_dialogBackground">@color/white</item>
        <item name="bs_dividerColor">@color/list_item_selected</item>
        <item name="bs_numColumns">4</item>
    </style>


    <style name="FullScreenDialogTheme" parent="@android:style/Theme.Panel">
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>



</resources>
